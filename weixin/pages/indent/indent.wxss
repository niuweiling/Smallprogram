/* pages/indent/indent.wxss */
.indent{
  background:#fcfcfc;
}
/* 头部 */
.header{
  width:100%;
  height:79rpx;
  padding:0 24rpx;
  margin-top:24rpx;
  line-height:50rpx;
  border-bottom:.5px solid #eeeeee;
}
.header>image{
  width:54rpx;
  height:54rpx;
  float:left;
}
.title{
  width:80%;
  height:100%;
  margin:0 auto;
  text-align:center;
}
.nav{
  width:100%;
  height:100rpx;
  border-bottom:.5px solid #ffcb3f;
  padding:0 40rpx;
  box-sizing: border-box;
}
.nav-list{
  width:100%;
  height:100%;
  display:flex;
  justify-content: space-between;
  align-items:center;
  font-size:32rpx;
  color:#a7a7a7;
  font-weight:500;
}
.goods{
  width:702rpx;
  height:262rpx;
  margin:24rpx auto;
  border-radius:10rpx;
  box-shadow:  0 0 10px #d8d8d8;
  background:#ffffff;
 
}
.goods-list{
  width:100%;
  height:100%;
  padding:0 24rpx;
  box-sizing: border-box;
  display:flex;
  justify-content: space-between;
  align-items: center;
}
.goods .img{
  width:170rpx;
  height:131rpx;
  /* float:left; */
}
.goods .img>image{
  width:170rpx;
  height:131rpx;
}
.main{
  width:295rpx;
  height:140rpx; 
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  align-items:flex-start;
}
.name{
  font-size:30rpx;
  font-weight:600;
}
.time{
  text-align:left;
  color:#9d9d9d;
  font-size:28rpx;
}
.right{
  width:163rpx;
  height:150rpx; 
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  align-items:flex-end;
  font-size:28rpx;
  font-weight:500;
}
.status{
  font-size:32rpx;
  color:#ffcb3f;
  /* float:right; */
  font-weight:600;
  margin-top:30rpx;
}