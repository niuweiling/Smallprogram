/* pages/orderdetails/orderdetails.wxss */
page{
   background:#f6f6f6;
}
.address-shouhuo{
  padding: 0 32rpx;
  box-sizing: border-box;
  margin-bottom: 34rpx;
}
.address-shouhuo-box{
  padding: 27rpx 33rpx 0 31rpx;
  box-sizing: border-box;
	height: 273rpx;
	background-color: #ffffff;
	box-shadow: -1rpx 5rpx 5rpx 0rpx 
		rgba(118, 118, 118, 0.17);
	border-radius: 10rpx;
  position: relative;
}
.address-title{
  font-size: 28rpx;
  color: #000;
  letter-spacing: 3rpx;
  line-height: 36rpx;
  margin-bottom: 19rpx;
}
.address-zhuzhai-box{
  width: 100%;
  height: 33rpx;
  overflow: hidden;
}
.address-zhuzhai{
  width: 55rpx;
  height: 100%;
float: left;
line-height: 36rpx;
	letter-spacing: 2rpx;
	color: #ffffff;
