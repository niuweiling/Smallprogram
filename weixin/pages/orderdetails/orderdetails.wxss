  box-sizing: border-box;
}
.address-position{
  	height: 24rpx;
    font-size: 24rpx;
    line-height: 36rpx;
    letter-spacing: 2rpx;
	color: #000000;
  margin-top: 12rpx;
  margin-bottom: 14rpx;
}
.address-name{
line-height: 36rpx;
	letter-spacing: 2rpx;
	color: #000000;
  height: 36rpx;
  font-size: 22rpx;
}
.bottom-line{
  position: absolute;
  left: 0;
  bottom: 0;
