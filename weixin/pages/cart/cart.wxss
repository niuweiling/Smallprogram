/* 购物车 */
.cart{
  width:100%;
  height: auto;
  padding: 36rpx;
  box-sizing: border-box;
}
/* 商品 */
.item{
  width: 100%;
  height: 160rpx;
  /* background-color: rebeccapurple; */
  display: flex;
  justify-content: space-between;
  /* line-height: 160rpx; */
  /* border-bottom: 1rpx solid gray; */
}
/* 左 */
.left{
  width: 70%;
  height: 100%;
  /* background-color: red; */
  display: flex;
  justify-content: space-around;
}
.dot{
  width:30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1rpx solid #f0d8e6;
  margin-top: 60rpx;
}
/* 点击选中状态 */
.dot-sel{
  width:20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #f0d8e6;
  margin: 5rpx;
}
.detail{
  width: 400rpx;
  height: 100%;
  display: flex;
  justify-content: space-between;
  /* background-color: gray; */
}
.del{
  width: 200rpx;
  height: 100%;
  background-color: #F5F2C4;
  /* float: left; */
}
.tu{
  width: 200rpx;
  height: 160rpx;
}
.tu>image{
  width: 100%;
  height: 100%;
}
.text{
  width: 190rpx;
  height: 100%;
  font-size: 36rpx;
  /* background-color: green; */
  /* float:right; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.money{
  font-size: 36rpx;
}
/* 右 */
.right{
  width:200rpx;
  height: 50rpx;
  /* background-color: rebeccapurple; */
  margin-top:60rpx; 
  display: flex;
  justify-content: space-between;
}
/* 加减按钮 */
.plus,.add{
  width: 50rpx;
  height: 50rpx;
  border: 1rpx solid black;
  box-sizing: border-box;
  text-align: center;
  line-height: 50rpx;
}
/* 底部 */
.footer{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  line-height: 100%;
  border-top:1rpx solid #cccccc;
}
/* 左 */
.foot-left{
  margin-left: 24rpx;
  width: 50%;
  height: 100%;
  display: flex;
  line-height: 100rpx;
  justify-content: space-around;
}
.select{
  width:30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1rpx solid #d9a4c3;
  margin-top: 35rpx;
}
/* 右 */
.gopay{
  width: 25%;
  height: 100%;
}
.foot-right{
  width: 100%;
  height: 100%;
  background-color: #e46997;
  line-height: 100rpx;
  text-align: center;
  color: white;
  font-size: 36rpx;
}
